<div class="bg bg-1"></div>
<div class="bg bg-2"></div>
<div class="bg bg-3"></div>
<div class="grain"></div>
<div class="main-head">
    <div>
        {% block title %}
            <h1 class="p-name" itemprop="headline">{{ title }}</h1>
        {% endblock %}
        {% if description %}
            <p class="p-summary">{{ description }}</p>
        {% endif %}
    </div>
    {% if coverImage %}
        <img src="/{{ coverImage }}" alt="" class="cover"/>
    {% else %}
        <img src="/logo.png" class="logo"/>
    {% endif %}
</div>
